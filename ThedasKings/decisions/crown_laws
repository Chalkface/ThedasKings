de_jure_laws = {

####### Crown Style ######

	crown_0 = { #Orlesian	Primogeniture, King has no Limits but Skill
		show_as_title = yes
		group = crown
		default = yes
	
		allow = {
			has_law = crown_1
		}

		revoke_allowed = {
			always = no
		}
		ai_will_do = {
			factor = 0
		}
		ai_will_revoke = {
			factor = 0
		}
		effect = {
			hidden_tooltip = {
				revoke_law = chantry_0
				revoke_law = chantry_1
				revoke_law = chantry_2
				revoke_law = chantry_3
				revoke_law = chantry_4
			}
		}
	}
	
	
#Tevinter		King is voted in, but for life
#Fereldan	All have Equal Rights, King Elected from Dynasty
#Marcher		Petty King, merely the largest of the Nobles
#Antivan		King has no Power at all

