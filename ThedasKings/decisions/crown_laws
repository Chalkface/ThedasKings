###### MAGE STATUS ######
	mage_0 = { #Magiocracy
		show_as_title = yes
		group = mage
		default = yes
		
		allow = {
			has_law = mage_1
			holder_scope = {
				is_republic = no
				custom_tooltip = {
					text = "Has Crown Law"
					hidden_tooltip = {
						OR = {
							has_law = crown_0
							has_law = crown_1
							has_law = crown_2
							has_law = crown_3
							has_law = crown_4
						}
					}
				}
				custom_tooltip = {
					text = "Free from the White Divine"
					hidden_tooltip = {
						OR = {
							NOT = { religion = andrastian_chantry }
							NOT = { has_law = chantry_4 }
							NOT = { has_law = chantry_3 }
							NOT = { has_law = chantry_2 }
							NOT = { has_law = chantry_1 }
						}
					}
				}
			}
		}
		revoke_allowed = {
			always = no
			}
		ai_will_do = {
			factor = 0
			}
		ai_will_revoke = {
			factor = 0
			}
		effect = {
			hidden_tooltip = {
				revoke_law = mage_0
				revoke_law = mage_1
				revoke_law = mage_2
				revoke_law = mage_3
				revoke_law = mage_4
			}
		}
	}
	
