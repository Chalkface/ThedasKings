### Chalkface ###

de_jure_laws = {

####### Crown Style ######
	crown_0 = { #Orlesian	Primogeniture, King has no Limits but Skill
		show_as_title = yes
		group = crown
		default = yes
		
		feudal_opinion = -5
		
		allow = {
			holder_scope = { is_republic = no }
			has_law = crown_1
		}

		revoke_allowed = {
			always = no
		}
		ai_will_do = {
			factor = 0
		}
		ai_will_revoke = {
			factor = 0
		}
		effect = {
			hidden_tooltip = {
				revoke_law = crown_0
				revoke_law = crown_1
				revoke_law = crown_2
				revoke_law = crown_3
				revoke_law = crown_4
			}
			set_appoint_generals = yes
			set_the_kings_peace = yes
			set_the_kings_full_peace = no
			set_protected_inheritance = yes
			set_allow_title_revokation = yes
			set_allow_free_infidel_revokation = yes
		}
		city_vassal_min_levy = 0.6
		castle_vassal_min_levy = 0.6
		temple_vassal_min_levy = 0.6
	}
	crown_1 = { #Tevinter		King is voted in, but Restricted only by Skill
		show_as_title = yes
		group = crown
		default = yes
		
		feudal_opinion = -10
	
		allow = {
			holder_scope = { is_republic = no }
			OR = { has_law = crown_0 has_law = crown_2 }
