##########################################
# The Ferelden Branch of the Grey Wardens
##########################################

### Ask for a County in order to help against Blight ###

# Warden-Commander writes a letter
character_event = {
	id = #
	desc = "EVTDESC#
	picture = #
	border = #
	
	trigger = {
		# Grey Wardens is active
		is_title_active = d_ferelden_wardens
		primary_title = {
			title = d_ferelden_wardens
		}
		independent = yes

		NOT = { has_global_flag = grey_wardens_invited_to_kingdom }
		NOT = { has_global_flag = land_wanted_by_grey_wardens }
		OR = {
			NOT = { has_character_flag = land_given_to_grey_wardens }
			had_character_flag = { flag = land_given_to_grey_wardens days = 365 }
			had_character_flag = { flag = no_land_to_grey_wardens_at_the_moment days = 720 }
		}

		# There is a valid province
		any_independent_ruler = {
			primary_title = {
				tier = KING
			}
			NOT = { has_character_flag = no_land_to_grey_wardens }
			any_demesne_province = {
				any_neighbor_province = {
					has_owner = yes
					owner = {
						religion_group = old_gods
					}
				}
				kingdom = {
					OR = {
						has_holder = no
						holder_scope = {
							NOT = { religion = ROOT }
						}
					}
				}
			}
		}
	}
	
	mean_time_to_happen = {
		months = 12
	}
	
	immediate = {
		hidden_tooltip = {
			set_global_flag = land_wanted_by_grey_wardens
	}
	
	option = {
		name = "EVTOPT#"
		random_independent_ruler = {
			limit = {
				primary_title = {
					tier = KING
				}
				any_demesne_province = {
					any_neighbor_province = {
						has_owner = yes
						owner = {
							religion_group = pagan_group
						}
					}
					kingdom = {
						OR = {
							has_holder = no
							holder_scope = {
								NOT = { religion = ROOT }
							}
						}
					}
				}
			}
			random_demesne_province = {
				limit = {
					NOT = { religion = ROOT }
					any_neighbor_province = {
						has_owner = yes
						owner = {
							religion_group = pagan_group
						}
					}
					kingdom = {
						OR = {
							has_holder = no
							holder_scope = {
								NOT = { religion = ROOT }
							}
						}
					}
				}
				set_province_flag = land_wanted_by_teutonic_order
				owner = {
					letter_event = { id = 8701 days = 7 }
				}
			}
		}
	}
}

# Ask permission from the King
letter_event = {
	id = #
	desc = "EVTDESC#"
	border = GFX_event_letter_frame_religion
	
	is_triggered_only = yes
	
	option = {
		name = "EVTOPT#"
		ai_chance = { factor = 100 }
		prestige = 100
		random_demesne_province = {
			limit = { has_province_flag = land_wanted_by_grey_wardens }
			county = {
				grant_title = FROM
				FROM = {
					gain_settlements_under_title = {
						title = PREV
						enemy = ROOT
					}
				}
			}
		}
		FROM = {
			opinion = {
				modifier = opinion_granted_county_to_grey_wardens
				who = ROOT
				years = 100
			}
		}
		hidden_tooltip = {
			FROM = {
				random_demesne_province = {
					limit = { has_province_flag = land_wanted_by_grey_wardens }
					province_event = { id = # days = 1 }
				}
			}
		}
		set_character_flag = land_given_to_grey_wardens
	}
	option = {
		name = "EVTOPT#"
		ai_chance = { factor = 0 }
		set_character_flag = no_land_to_grey_wardens_at_the_moment
	}
	option = {
		name = "EVTOPT#"
		ai_chance = { factor = 0 }
		prestige = -25
		FROM = {
			opinion = {
				modifier = opinion_angry
				who = ROOT
				years = 20
			}
		}
		religion_head = {
			opinion = {
				modifier = opinion_disappointed
				who = ROOT
				years = 10
			}
		}
		hidden_tooltip = {
			FROM = { letter_event = { id = 8800 days = 1 } }
		}
		set_character_flag = no_land_to_religious_orders
		clr_province_flag = land_wanted_by_teutonic_order
		clr_global_flag = land_wanted_by_teutonic_order
	}
}

# The county has been seceded
province_event = {
	id = 8702
	desc = "EVTDESC8702"
	picture = "GFX_evt_castle_construction"
	border = GFX_event_normal_frame_religion
	
	is_triggered_only = yes
	
	option = {
		name = "EXCELLENT"
		hidden_tooltip = {
			clr_province_flag = land_wanted_by_grey_wardens
			clr_global_flag = land_wanted_by_grey_wardens
			owner = { narrative_event = { id = 8703 days = 7 } }
		}
	}
}

# News spread about the new county
narrative_event = {
	id = 8703
	title = "EVTNAME8703"
	desc = "EVTDESC8703"
	picture = "GFX_evt_crusaders"
	border = "GFX_event_narrative_frame_religion"
	
	major = yes
	only_rulers = yes
	
	is_triggered_only = yes
	
	option = {
		name = "EVTOPTA8503"
		trigger = {
			has_character_flag = land_given_to_grey_wardens
		}
		prestige = 100
		clr_character_flag = land_given_to_grey_wardens
	}
	option = {
		name = "EVTOPTB8503"
		trigger = {
			NOT = { has_character_flag = land_given_to_teutonic_order }
			religion = FROMFROM
		}
	}
	option = {
		name = "EVTOPTC8503"
		trigger = {
			NOT = { religion_group = christian }
		}
	}
	option = {
		name = "EVTOPTD8503"
		trigger = {
			religion_group = christian
			NOT = { religion = FROMFROM }
		}
	}
}
