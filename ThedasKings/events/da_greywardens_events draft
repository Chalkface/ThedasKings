# The Warden-Commander demands one of your children via the Right of Conscription
character_event = {
	id = #
	desc = OK
	picture = GFX_evt_#
	border = GFX_event_normal_frame_#
	
	hide_window = yes
	
	only_playable = yes
	
	trigger = {
		
		NOT = { has_character_flag = sent_child_to_grey_wardens }
		any_child = {
			is_adult = yes
			is_ruler = no
			NOT = { trait = incapable }
			ROOT = {
				NOT = { 
					current_heir = { 
						character = PREVPREV 
					}
				}
			}
		}
	}
	
	mean_time_to_happen = {
		months = 340
	}
	
	immediate = {
		random_child = {
			limit = {
				is_adult = yes
				is_ruler = no
				NOT = { trait = incapable }
				ROOT = {
					NOT = { 
						current_heir = { 
							character = PREVPREV 
						}
					}
				}
			}
			character_event = {
				id = #
			}
		}
	}
	
	option = {
		name = OK
	}
}

character_event = {
	id = #
	desc = OK
	picture = GFX_evt_#
	border = GFX_event_normal_frame_#
	
	hide_window = yes
	
	is_triggered_only = yes
	
	immediate = {
		d_ferelden_wardens = {
			holder_scope = {
				character_event = {
					id = #
				}
			}
		}
	}
	
	option = {
		name = OK
	}
}

character_event = {
	id = #
	desc = OK
	picture = GFX_evt_#
