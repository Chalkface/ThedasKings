letter_event = {
	id = #
	desc = EVTDESC_#
	border = GFX_event_letter_frame_#
	
	is_triggered_only = yes
	
	option = {
		name = EVTOPTA_# # Agree
		ai_chance = {
			factor = 80
			modifier = {
				factor = 0
				has_character_modifier = expelled_grey_wardens
			}
		}
		
		hidden_tooltip = {
			FROMFROM = {
				province_event = { id = # }
			}
			remove_character_modifier = expelled_grey_wardens
		}
		
		piety = 200
		wealth = 100
	}
	
	option = {
		name = EVTOPTB_SOA_1031 # Refuse
		ai_chance = {
			factor = 20
		}
		
		piety = -100
	}
}

# Castle has been erected
province_event = {
	id = #
	desc = EVTDESC_#
	picture = GFX_evt_castle_construction
	border = GFX_event_normal_frame_#
	
	is_triggered_only = yes
	
	immediate = {
		FROMFROM = {
			wealth = -300
		}
	}
	
	option = {
		name = EVTOPTA_SOA_1024
		build_holding = {
		   type = castle
		   holder = FROMFROM
		}
	}
}


# Ping event when expelling the Grey Wardens
# Only King or above can expell the Grey Wardens
character_event = {
	id = #
	desc = OK
	picture = GFX_evt_#
	border = GFX_event_normal_frame_#
	
	hide_window = yes
	
	is_triggered_only = yes
	
	immediate = {
		any_title_under = {
			limit = {
				tier = KING
				location = {
					owner = {
						OR = {
							character = FROM
							is_liege_or_above = FROM
						}
					}
				}
			}
			usurp_title = FROM
		}
		
		set_defacto_liege = THIS
	
		FROM = {
			letter_event = {
				id = #
			}
		}
		
		opinion = {
			who = FROM
			modifier = opinion_expelled_from_realm
		}
	}
	
	option = {
		name = OK
	}
}

# Notification event when expelling the Grey Wardens
letter_event = {
	id = #
	desc = EVTDESC_#
	border = GFX_event_letter_frame_#
	
	is_triggered_only = yes
	
	option = {
		name = EVTOPTB_#
	}
}


