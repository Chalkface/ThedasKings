
# SPECIAL TITLES

k_andrastian_chantry = {
	color={ 255 249 198 }
	color2={ 220 220 0 }
	
	capital = # b_grand_cathedral in Val Royeaux
	
	title = "WHITE_DIVINE"
	foa = "WHITE_DIVINE_FOA"
	short_name = yes
	location_ruler_title = yes
	
	# Always exists
	landless = yes
	
	# Controls a religion
	controls_religion = andrastian_chantry
	
	religion = andrastian_chantry
	
	# Cannot be held as a secondary title
	primary = yes
	
	dynasty_title_names = no 	# Will not be named "Seljuk", etc.
	
	# Regnal names
	female_names = {
		Justinia Ambrosia Hortensia Renata Galatea Joyous Clemence Rosamund Amara Theodosia Faustine Beatrix
	}
}

